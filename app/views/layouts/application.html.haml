/[if (gt IE 9)|!(IE)] <!--> <html lang=\"en\">

%head
  %meta{ :charset => "utf-8" }

  -# Uncomment to make IE8 render like IE7
  -# meta http-equiv="X-UA-Compatible" content="IE=7"

  -# Set the viewport width to device width for mobile
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

  %title= content_for?(:title) ? yield(:title) : "M60 Car Warehouse"

  = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Montserrat:400,700", "application", "data-turbolinks-track" => true
  = javascript_include_tag "vendor/custom.modernizr", "data-turbolinks-track" => true
  = csrf_meta_tag

%body

  %header

    %nav.top-bar
      %ul.title-area
        %li.name
          %h1= link_to "M60 Car Warehouse", root_path
        %li.toggle-topbar.menu-icon
          %a{href: "#"}
            %span Menu
      %section.top-bar-section
        %ul.right
          %li.divider
          %li.active= link_to "Home", root_path
          %li= link_to "Showroom", "showroom_path"
          %li= link_to "Part Ex", "part_ex"
          %li= link_to "Finance", "finance"
          %li= link_to "Location", "location"
  = yield
  %footer
    .orange
      Call us now 0161 776 7676
      and book in for a test drive
    .grey M60 Car Warehouse Limited, Address Line 1, Address 2
    .black Copyright M60 Car Warehouse - Site design & build by Seveer

  = javascript_include_tag "application"
